<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/remind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="80px"
        android:gravity="center"
        android:text="请绘制手势密码"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/warn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_tip"
        android:layout_marginTop="20px"
        android:gravity="center"
        android:text="5次失败后，需要重新登录"
        android:textSize="12sp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/gesture_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="240px"
        android:paddingLeft="80px"></FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="60px"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/forget_gesture"
            android:layout_width="fill_parent"
            android:layout_height="80px"
            android:gravity="center"
            android:text="忘记手势"
            android:textColor="#00a7e4"
            android:textSize="16sp" />
        <!--android:textColor="#E7E7E6"-->

    </LinearLayout>

</LinearLayout>